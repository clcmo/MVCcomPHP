{
    "name": "clcmo/mvccomphp",
    "description": "Sistema de Aulas PHP com MVC - Arquitetura Modular",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "clcmo",
            "email": "contato@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=PSR12 app",
        "fix": "phpcbf --standard=PSR12 app"
    }
}
